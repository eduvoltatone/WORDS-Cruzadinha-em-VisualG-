 escreval("   ||_| _  |   |   |   _    |_|_||    (<|   |>)   ")
 escreval("   |   | | |   |   |  | |        |  __  |   |     ")
 escreval(" __|___|_|_|___|___|__|_|________|_|__|_|___|____ ")
 escreval(" ________________________________________________ ")
 escreval("                                                  ")
 escreval("                                                  ")
 escreval("                                                  ")
 escreval("            Carregando...                         ")
 escreval("          |==============================|        ")
 escreval("           ",carregar)
 escreval("          |==============================|        ")
 escreval("                                                  ")
 escreval("                                                  ")
 escreval("                                                  ")
 escreval("/------------------------------------------------/")
 carregar<-carregar + ">"
 fimpara

 limpatela
 escreval("/------------------------------------------------/")
 escreval("                                                  ")
 escreval("                    _ _ _ _               _       ")
 escreval("       _           | _   _ |  \\\       (< >)     ")
 escreval("      / \          ||_| |_||   |       (<< >>)    ")
 escreval("     /   \         | _   _ |   |      (<<< >>>)   ")
