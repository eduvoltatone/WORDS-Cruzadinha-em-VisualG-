// OPÇÃO JOGAR DO MENU -------------------------------------------------//
procedimento jogar
var
resp:inteiro
inicio
 se (x=1)e(y=1)e(z=1) entao  // <- VALIDANDO SE AS FASES FORAM CONCLUIDAS
  limpatela
  escreval("/------------------------------------------------/")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval("      PARABENS VOCÊ COMPLETOU TODAS AS FASES!     ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval(" FICO LISONJEADO EM SABER QUE VOCÊ CHEGOU ATÉ AQUI,")
  escreval(" PARA CONHECER MELHOR O PROJETO RECOMENDO QUE LEIA ")
  escreval(" OS CRÉDITOS NO MENU DE OPÇÕES.                   ")
  escreval("                                                  ")
  escreval("  OBRIGADO, ATÉ LOGO               /","/","/","/  ")
  escreval("                                  (º_º)           ")
  escreval("                                  _\ /_           ")
  escreval("                                 /|   |\          ")
  escreval("                                / |___| \         ")
  escreval("                               *  |   |  *        ")
  escreval("                                  |   |           ")
  escreval("                                 ==   ==          ")
  escreval("                                                  ")
  escreval("           69 65 83 84 69 82 32 69 71 71          ")
  escreval("                                                  ")
  escreval("/------------------------------------------------/")
   escreva(" -> Aperte ENTER para ver os CRÉDITOS!")
  leia(resp)
  creditos
 fimse
  
 enquanto (tutorial=falso) faca // APRESENTANDO O TUTORIAL
  limpatela
  escreval("/------------------------------------------------/")
  escreval("                                                  ")
  escreval("                     TUTORIAL                     ")
  escreval("                                                  ")
  escreval(" Objetivo: completar toda a cruzadinha, digitando ")
  escreval(" a informação correta                             ")
  escreval("                                                  ")
  escreval("  Exemplo:                                        ")
  escreval("           _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _        ")
  escreval("          |                               |       ")
  escreval("          |               2º              |       ")
  escreval("          |               -               |       ")
  escreval("          |               *               |       ")
  escreval("          |  -> 1º| T E R R E M O T O     |       ")
  escreval("          |               *               |       ")
  escreval("          |           3º| * * * *         |       ")
  escreval("          |               *               |       ")
  escreval("          |                               |       ")
  escreval("          |1º Abalo sísmico na crosta ter-|       ")
  escreval("          |restre, causa ruptura de rochas|       ")
  escreval("          |_ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _|       ")
  escreval("           -> Digite a palavra: Terremoto         ")
  escreval("                                                  ")
  escreval("/------------------------------------------------/")
   escreva(" -> Aperte ENTER para continuar!")
  leia(resp)
  tutorial<-verdadeiro
 fimenquanto

 repita       // PEDINDO PARA O USUÁRIO ESCOLHER O TEMA
 limpatela
  escreval("/------------------------------------------------/")
  escreval("                                                  ")
  escreval("                  ESCOLHA UM TEMA                 ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval("     1.Cidades      2.Países       3.Animais      ")
  escreval("                                                  ")
  escreval("      (",x,"/1 )        (",y,"/1 )        (",z,"/1 )")
  escreval("     Concluido      Concluido      Concluido      ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval("     4.Voltar ao MENU                             ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval("                                                  ")
  escreval(" Sistema: Você poderá retornar para o MENU enquan-")
  escreval(" to estiver jogando, apenas digite VOLTAR.        ")
  escreval("                                                  ")
  escreval("                                Aproveite o jogo! ")
  escreval("/------------------------------------------------/")
 escreva("-> Selecione uma opção: ")
 leia(resp)
 ate (resp=1)ou(resp=2)ou(resp=3)ou(resp=4)

 escolha resp
   caso 1
    fase_cidades
   caso 2
    fase_paises
   caso 3
    fase_animais
   caso 4
    menu
 fimescolha
fimprocedimento
