 leia(resp)
 resp <- maiusc(resp) // PASSANDO PARA MAIUSCULO, DIMINUÍ AS POSSIBILIDADES DE ESCRITA

  // VERIFICANDO A RESPOSTA
 escolha resp
  caso "ROMA"
   p1 <- "ROMA"
   o1 <- "O"
   cont1 <- 1
  caso "LONDRES"
   p2 <- "LONDRES"
   l1 <- "L"
   cont2 <- 1
  caso "MACHU PICCHU"
   p3 <- "MACHU-PICCHU"
   a1 <- "A"
   cont3 <- 1
  caso "RIO DE JANEIRO"
   p4 <- "RIO-DE-JANEIRO"
   o1 <- "O"
   a2 <- "A"
   i1 <- "I"
   cont4 <- 1
