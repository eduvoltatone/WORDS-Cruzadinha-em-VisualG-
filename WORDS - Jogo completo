 ver_dica <- "Não"
 vet_dicas[1] <- "Não"
 
 repita
 limpatela          // APRESENTAÇÃO DA FASE
 escreval("/------------------- Cidades --------------------/")
 escreval("                                                  ")
 escreval("  (",contador,"/6 )    5º| ",copia(p5,1,1),"      ")
