// OPÇÃO SCORE ----------------------------------------------------//
procedimento score1
var
resp:caracter
imagem1,imagem2,imagem3:vetor[1..5] de caracter
inicio
  imagem1[5] <- "Não concluído"
  imagem2[5] <- "Não concluído"   // CASO O USUARIO NÂO TENHA COMPLETADO AS FASES
  imagem3[5] <- "Não concluído"

  //  TRATAMENTO DOS DADOS PARA SEREM APRESENTADOS
  se (x=1) entao
    se (vet_score[1]=1000)entao
    imagem1[1] <-"       /\     "
    imagem1[2] <-" /\ \/ /\  "
    imagem1[3] <-"    \/    \/  "
    imagem1[4] <-" 3 Rubys"
    imagem1[5] <- "  Perfeito!"
    fimse
    se (vet_score[1]>=550) e (vet_score[1]<=999)  entao
    imagem1[1] <-"          "
    imagem1[2] <-" /\   /\  "
    imagem1[3] <-"    \/   \/  "
    imagem1[4] <-" 2 Rubys"
    imagem1[5] <- "  Incrível!"
    fimse
    se (vet_score[1]<=549) e (vet_erros[1]<=9) entao
    imagem1[1] <-"          "
    imagem1[2] <-"   /\     "
    imagem1[3] <-"      \/  "
    imagem1[4] <-" 1 Rubys"
    imagem1[5] <- "    Bom!"
    fimse
    se (vet_score[1]<=549) e (vet_erros[1]>=10) entao
    imagem1[1] <-"          "
    imagem1[2] <-"    /\     "
    imagem1[3] <-"        \/  "
    imagem1[4] <-"  1 Rubys"
    imagem1[5] <- "    Bom!"
    fimse
  fimse
  
  se (y=1) entao
    se (vet_score[2]=1000)entao
    imagem2[1] <-"       /\     "
    imagem2[2] <-" /\ \/ /\  "
    imagem2[3] <-"    \/    \/  "
    imagem2[4] <-" 3 Rubys"
    imagem2[5] <- "  Perfeito!"
    fimse
    se (vet_score[2]>=550) e (vet_score[2]<=999)  entao
    imagem2[1] <-"          "
    imagem2[2] <-" /\   /\  "
    imagem2[3] <-"    \/   \/  "
    imagem2[4] <-" 2 Rubys"
    imagem2[5] <- "  Incrível!"
    fimse
    se (vet_score[2]<=549) e (vet_erros[2]<=9) entao
    imagem2[1] <-"          "
    imagem2[2] <-"   /\     "
    imagem2[3] <-"      \/  "
    imagem2[4] <-" 1 Rubys"
    imagem2[5] <- "    Bom!"
    fimse
    se (vet_score[2]<=549) e (vet_erros[2]>=10) entao
    imagem2[1] <-"          "
    imagem2[2] <-"    /\     "
    imagem2[3] <-"        \/  "
    imagem2[4] <-"  1 Rubys"
    imagem2[5] <- "    Bom!"
    fimse
  fimse
  
  se (z=1) entao
    se (vet_score[3]=1000)entao
    imagem3[1] <-"       /\     "
    imagem3[2] <-" /\ \/ /\  "
    imagem3[3] <-"    \/    \/  "
    imagem3[4] <-" 3 Rubys"
    imagem3[5] <- "  Perfeito!"
    fimse
    se (vet_score[3]>=550) e (vet_score[3]<=999)  entao
    imagem3[1] <-"          "
    imagem3[2] <-" /\   /\  "
    imagem3[3] <-"    \/   \/  "
    imagem3[4] <-" 2 Rubys"
    imagem3[5] <- "  Incrível!"
    fimse
    se (vet_score[3]<=549) e (vet_erros[3]<=9) entao
    imagem3[1] <-"          "
    imagem3[2] <-"   /\     "
    imagem3[3] <-"      \/  "
    imagem3[4] <-" 1 Rubys"
    imagem3[5] <- "    Bom!"
    fimse
    se (vet_score[3]<=549) e (vet_erros[3]>=10) entao
    imagem3[1] <-"          "
    imagem3[2] <-"   /\     "
    imagem3[3] <-"       \/  "
    imagem3[4] <-"  1 Rubys"
    imagem3[5] <- "    Bom!"
    fimse
  fimse

   // APRESENTAÇÃO DOS RESULTADOS
  limpatela
  escreval("/------------------------------------------------/")
  escreval("                    FASE CIDADE                   ")
  escreval("                                 ",imagem1[1],"   ")
  escreval(" Erros: ",vet_erros[1],"                          ",imagem1[2],"")
  escreval(" Usou a dica: ",vet_dicas[1],"                ",imagem1[3],"")
  escreval("                                                  ")
  escreval(" Score: ",vet_score[1],"                        ",imagem1[4],"")
  escreval("                   ",imagem1[5],"")
  escreval(" - - - - - - - - - - - - - - - - - - - - - - - - -")
  escreval("                    FASE PAÍSES                   ")
  escreval("                                 ",imagem2[1],"   ")
  escreval(" Erros: ",vet_erros[2],"                          ",imagem2[2],"")
  escreval(" Usou a dica: ",vet_dicas[2],"                ",imagem2[3],"")
  escreval("                                                  ")
  escreval(" Score: ",vet_score[2],"                        ",imagem2[4],"")
  escreval("                   ",imagem2[5],"")
  escreval(" - - - - - - - - - - - - - - - - - - - - - - - - -")
  escreval("                    FASE ANIMAIS                  ")
  escreval("                                 ",imagem3[1],"   ")
  escreval(" Erros: ",vet_erros[3],"                          ",imagem3[2],"")
  escreval(" Usou a dica: ",vet_dicas[3],"                ",imagem3[3],"")
  escreval("                                                  ")
  escreval(" Score: ",vet_score[3],"                        ",imagem3[4],"")
  escreval("                   ",imagem3[5],"")
  escreval("/------------------------------------------------/")
   escreva(" -> Aperte ENTER para voltar ao menu!")
   leia(resp)
  menu
fimprocedimento
