// FASE CIDADES -----------------------------------------------------//
procedimento fase_cidades
var
resp,carregar,p1,p2,p3,p4,p5,p6,ver_dica:caracter
erros,contador,cont1,cont2,cont3,cont4,cont5,cont6,score,loading,valor_dica:inteiro
a1,o1,a2,l1,i1:caracter
dica:logico
inicio

  se (x=1) entao  // CASO A FASE JA TENHA SIDO CONCLUÍDA
   repita
   limpatela
   escreval("/------------------------------------------------/")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                       AVISO                      ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("           Você já finalizou está fase!           ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("       1.Jogar novamente           0.Voltar       ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("                                                  ")
   escreval("/------------------------------------------------/")
    escreva(" -> Selecione uma opção(1/0): ")
   leia(resp)
   ate (resp="0") ou (resp="1")

   se (resp="0") entao
     jogar
   fimse
  fimse
  
  //LOADING DA FASE
 para loading de 1 ate 31 faca
 limpatela
 escreval("/------------------------------------------------/")
 escreval("                                                  ")
 escreval("                    _ _ _ _               _       ")
 escreval("       _           | _   _ |  \\\       (< >)     ")
 escreval("      / \          ||_| |_||   |       (<< >>)    ")
 escreval("     /   \         | _   _ |   |      (<<< >>>)   ")
