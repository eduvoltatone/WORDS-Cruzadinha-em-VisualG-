Algoritmo "WORDS"

// VAR GLOBAIS
Var
tutorial:logico
carregar:caracter
x,y,z,resp,n:inteiro

// VETORES: Armazenam os resultados das fases
vet_dicas:vetor[1..3] de caracter
vet_erros,vet_score:vetor[1..3] de inteiro

// MENU DO JOGO ---------------------------------------------------//
procedimento menu
inicio
 repita
 limpatela
 escreval("/------------------------------------------------/")
 escreval("    *========================================*    ")
 escreval("    *              _ _   _ _   _ _     _ _   *    ")
 escreval("    *  \        / |   | |_ _| |   \  (       *    ")
 escreval("    *   \  /\  /  |   | | \   |    )  `- _   *    ")
 escreval("    *    \/  \/   |_ _| |  \  |_ _/   _ _ )  *    ")
 escreval("    *========================================*    ")
 escreval("                                                  ")
 escreval("                                                  ")
 escreval("  B                                        _ _ _ _")
 escreval("  E                    MENU               | * * * ")
 escreval("* M * *                                   |   *   ")
 escreval("  |                  1.jogar              |     * ")
 escreval("  V                  2.Score              | * * * ")
 escreval("* I                  3.Créditos           |_ _ _*_")
 escreval("  N                  4.Sair                ->???  ")
 escreval("  D *                                             ")
 escreval("  O   *                                           ")
 escreval("        *                                         ")
 escreval("                                                  ")
 escreval("                                                  ")
 escreval("                                                  ")
 escreval("                                                  ")
 escreval("/------------------------------------------------/")
 escreva("-> Selecione uma opção: ")
 leia(resp)
 ate (resp=1)ou(resp=2)ou(resp=3)ou(resp=4)

 escolha resp
   caso 1
    jogar
   caso 2
    score1
   caso 3
    creditos
   caso 4
    sair
 fimescolha

fimprocedimento
